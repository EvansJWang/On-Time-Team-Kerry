<h2>Create New Order for Delivery</h2>

<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
  </ul>
  <% end %>
<% end  %>

<form class="form" action="/merchants/<%= params[:merchant_id] %>/orders" method="post">
  <%= hidden_field_tag "authenticity_token", form_authenticity_token %>
  <input type="text" name="orders[destination]" value="" placeholder="Order Destination"/>
  <input type="hidden" name="orders[merchant_id]" value="<%= params[:merchant_id] %>"/>
  <input type="hidden" name="orders[contractor_id]" value="<%= Contractor.find(1).id %>"/>
  <input type="submit" value="Create Order"/>
</form>
